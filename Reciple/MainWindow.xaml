<Window
    x:Class="Reciple.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Reciple"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="HomeScreen"
    Width="1100"
    Height="700"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <Style x:Key="BorderControl" TargetType="Border">
            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="BorderBrush" Value="#000" />
            <Setter Property="CornerRadius" Value="50" />
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="32" />
        </Style>
        <Style x:Key="ControlBtn" TargetType="Button">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="FontWeight" Value="UltraBold" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="Width" Value="32" />
            <Setter Property="Height" Value="32" />
        </Style>
        <Style x:Key="BorderFavorite" TargetType="Border">
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="50" />
            <Setter Property="Width" Value="110" />
            <Setter Property="Height" Value="110" />
        </Style>

        <Storyboard x:Key="sbShowLeftMenu">
            <ThicknessAnimation
                DecelerationRatio=".9"
                Storyboard.TargetProperty="Margin"
                From="-220,0,0,0"
                To="0,0,0,0"
                Duration="0:0:0.2" />
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="GridMain" Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="0.5" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="sbHideLeftMenu">
            <ThicknessAnimation
                AccelerationRatio=".9"
                Storyboard.TargetProperty="Margin"
                From="0,0,0,0"
                To="-220,0,0,0"
                Duration="0:0:0.2" />
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="GridMain" Storyboard.TargetProperty="(UIElement.Opacity)">
                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="100" />
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
    </Window.Resources>
    <Grid>
        <StackPanel
            Name="Menu"
            Width="220"
            Margin="-220,0,0,0"
            HorizontalAlignment="Left"
            Panel.ZIndex="10"
            Background="#FFF2FDFF">
            <Button
                Name="btnMenuHide"
                Margin="0,8,0,0"
                HorizontalAlignment="Right"
                Background="#00000000"
                BorderBrush="Transparent"
                BorderThickness="0"
                Click="btnHideMenu_Click"
                Foreground="#FF3C3C3C">
                <materialDesign:PackIcon
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Kind="Backburger">
                    <materialDesign:PackIcon.LayoutTransform>
                        <ScaleTransform CenterX="0.5" CenterY="0.5" ScaleX="2" ScaleY="2" />
                    </materialDesign:PackIcon.LayoutTransform>
                </materialDesign:PackIcon>
            </Button>
            <Border
                Margin="0,0,0,12"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="Azure">
                <Label Content="LOGO" FontSize="20" />
            </Border>
            <Border
                Height="34"
                Margin="16,0,16,12"
                VerticalAlignment="Center"
                Background="#3B9691"
                BorderBrush="Transparent"
                BorderThickness="1"
                CornerRadius="14">
                <Button
                    HorizontalContentAlignment="Center"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Content="Sign-up / Login In"
                    FontSize="16"
                    FontWeight="Bold"
                    Foreground="#fff" />
            </Border>
            <Label
                Padding="0,6,0,6"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Content="Home"
                FontSize="16" />
            <Label
                Padding="0,6,0,6"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Content="Danh Mục"
                FontSize="16" />
            <Label
                Padding="0,6,0,6"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Content="Món ăn nhiều đề cử"
                FontSize="16" />
            <Label
                Padding="0,6,0,6"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Content="Liên Hệ"
                FontSize="16" />
            <Label
                Padding="0,6,0,6"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Content="Góp ý"
                FontSize="16" />
        </StackPanel>
        <Grid x:Name="GridMain">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="5.5*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <DockPanel
                Grid.Row="0"
                Margin="10,0,20,0"
                LastChildFill="True">
                <Grid DockPanel.Dock="Right">
                    <Button
                        Width="56"
                        Height="40"
                        materialDesign:ButtonAssist.CornerRadius="4"
                        Background="#fff"
                        BorderBrush="#999"
                        BorderThickness="1"
                        Foreground="#000"
                        Style="{StaticResource MaterialDesignRaisedDarkButton}"
                        ToolTip="MaterialDesignRaisedDarkButton with Round Corners">
                        <materialDesign:PackIcon Kind="Magnify">
                            <materialDesign:PackIcon.LayoutTransform>
                                <ScaleTransform CenterX="0.5" CenterY="0.5" ScaleX="1.4" ScaleY="1.4" />
                            </materialDesign:PackIcon.LayoutTransform>
                        </materialDesign:PackIcon>
                    </Button>
                </Grid>
                <Button
                    Name="btnMenuShow"
                    Background="#00000000"
                    BorderBrush="Transparent"
                    BorderThickness="0"
                    Click="btnShowMenu_Click"
                    DockPanel.Dock="Left"
                    Foreground="#FF3C3C3C">
                    <materialDesign:PackIcon
                        Margin="0,0,10,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Kind="Menu">
                        <materialDesign:PackIcon.LayoutTransform>
                            <ScaleTransform CenterX="0.5" CenterY="0.5" ScaleX="2" ScaleY="2" />
                        </materialDesign:PackIcon.LayoutTransform>
                    </materialDesign:PackIcon>
                </Button>

                <Border
                    Margin="10,0,10,0"
                    VerticalAlignment="Center"
                    BorderBrush="#999999"
                    BorderThickness="1"
                    CornerRadius="6">
                    <TextBox
                        Height="40"
                        Padding="40,0,0,0"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        FontSize="24"
                        Text="Search..." />
                </Border>
            </DockPanel>

            <DockPanel Grid.Row="1">
                <Label
                    HorizontalAlignment="Center"
                    Content="Your favorite cuisines"
                    DockPanel.Dock="Top"
                    FontSize="28"
                    FontWeight="Black" />
                <StackPanel
                    HorizontalAlignment="Center"
                    DockPanel.Dock="Bottom"
                    Orientation="Horizontal">
                    <Button
                        Background="{DynamicResource MaterialDesignTextFieldBoxBackground}"
                        Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="MaterialDesignIconButton">
                        <materialDesign:PackIcon Kind="ChevronLeft" />
                    </Button>

                    <Border Margin="32,0,32,0" Style="{StaticResource BorderFavorite}">
                        <Image
                            Width="108"
                            Height="108"
                            Source="Images/american.jpg" />
                    </Border>
                    <Border Margin="32,0,32,0" Style="{StaticResource BorderFavorite}">
                        <Image
                            Width="108"
                            Height="108"
                            Source="Images/american.jpg" />
                    </Border>
