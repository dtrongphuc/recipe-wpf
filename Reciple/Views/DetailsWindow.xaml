                    </Grid.ColumnDefinitions>

                    <Border BorderBrush="#c7c7c7" BorderThickness="0,0,0.5,0">
                        <StackPanel>
                            <TextBlock
                                FontSize="120"
                                FontWeight="Light"
                                Text="4"
                                TextAlignment="Center" />
