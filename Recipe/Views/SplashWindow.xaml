<Window
    x:Class="Recipe.Views.SplashWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Recipe.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SplashWindow"
    Width="385.72"
    Height="246.194"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    Loaded="Window_Loaded">
    <Grid>
        <Border>
            <Border.Background>
                <ImageBrush ImageSource="/Resource/Images/backgroud.jpg"/>
               
            </Border.Background>

            <StackPanel>
                <TextBlock Name="ContentWellcome"
                           Text="{Binding}"
                           FontSize="20"
                           FontWeight="Light"
                           TextAlignment="Center" 
                           TextWrapping="Wrap"
                           Margin="89,50,91.2,0" 
                           Height="95" RenderTransformOrigin="0.5,0.5">
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleX="0.599"/>
                            <RotateTransform/>
                            <TranslateTransform X="0.523"/>
                        </TransformGroup>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <CheckBox           
                           Content="Tắt hiển thị thông báo" 
                           x:Name="checkboxdisplay" 
                           Margin="110,0,96.2,0" 
                           Height="24"
                           />
                <Button
                           x:Name="OKButton"
                           Width="83"
                           Height="30"
                           Click="OKButton_Click"
                           Content="Close"
                            Margin="0,0,0,0"
                            />
            </StackPanel>
        </Border>

    </Grid>
</Window>
