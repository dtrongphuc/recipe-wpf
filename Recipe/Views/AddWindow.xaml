<Window x:Class="Recipe.Views.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Recipe.Views"
        mc:Ignorable="d"
        Title="AddWindow" Height="700" Width="1100">
    <Grid>
        <ScrollViewer>
            <StackPanel Width="806">
                <Button Height="265" 
                        Background="#d4d4d4"
                        BorderThickness="0">
                    <StackPanel>
                        
                        <TextBlock FontSize="30" FontWeight="Heavy" Foreground="#8a8a8a" Text="Bạn đã đăng hình món mình nấu ở đây chưa?"/>
                        <TextBlock FontSize="18" Foreground="#8a8a8a" TextAlignment="Center" Text="Truyền cảm hứng nấu món của bạn đến mọi người nào!"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
