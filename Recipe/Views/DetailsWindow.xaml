<Window
    x:Class="Recipe.Views.DetailsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:e="clr-namespace:Recipe.Converter"
    xmlns:local="clr-namespace:Recipe.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DetailsWindow"
    Width="1100"
    Height="700"
    Loaded="Window_Loaded"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <e:RelativeToAbsoluteConverter x:Key="pathConverter" />

        <Storyboard x:Key="CarouselStoryboard">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" Duration="0:0:0.4">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>
        <Style x:Key="ListViewStyle" TargetType="ListView">
            <Setter Property="ItemsPanel">
                <Setter.Value>
                    <ItemsPanelTemplate>
                        <StackPanel
                            Name="Carousel"
                            VerticalAlignment="Center"
                            Orientation="Horizontal">
                            <StackPanel.RenderTransform>
                                <TranslateTransform x:Name="CarouselTransfrom" />
                            </StackPanel.RenderTransform>
                        </StackPanel>
                    </ItemsPanelTemplate>
                </Setter.Value>
            </Setter>

        </Style>
        <Style x:Key="{x:Type ScrollBar}" TargetType="{x:Type ScrollBar}">
            <Setter Property="Stylus.IsFlicksEnabled" Value="false" />
            <Setter Property="Foreground" Value="LightGray" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Width" Value="10" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid
                            x:Name="GridRoot"
                            Width="10"
                            Background="{TemplateBinding Background}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.00001*" />
                            </Grid.RowDefinitions>

                            <Track
                                x:Name="PART_Track"
                                Grid.Row="0"
                                Focusable="false"
                                IsDirectionReversed="true">
                                <Track.Thumb>
                                    <Thumb
                                        x:Name="Thumb"
                                        Background="{TemplateBinding Foreground}"
                                        Style="{DynamicResource ScrollThumbs}" />
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton
                                        x:Name="PageUp"
                                        Command="ScrollBar.PageDownCommand"
                                        Focusable="false"
                                        Opacity="0" />
                                </Track.IncreaseRepeatButton>
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton
                                        x:Name="PageDown"
                                        Command="ScrollBar.PageUpCommand"
                                        Focusable="false"
                                        Opacity="0" />
                                </Track.DecreaseRepeatButton>
                            </Track>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger SourceName="Thumb" Property="IsMouseOver" Value="true">
                                <Setter TargetName="Thumb" Property="Background" Value="{DynamicResource ButtonSelectBrush}" />
                            </Trigger>
                            <Trigger SourceName="Thumb" Property="IsDragging" Value="true">
                                <Setter TargetName="Thumb" Property="Background" Value="{DynamicResource DarkBrush}" />
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="false">
                                <Setter TargetName="Thumb" Property="Visibility" Value="Collapsed" />
                            </Trigger>
                            <Trigger Property="Orientation" Value="Horizontal">
                                <Setter TargetName="GridRoot" Property="LayoutTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="-90" />
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="PART_Track" Property="LayoutTransform">
                                    <Setter.Value>
                                        <RotateTransform Angle="-90" />
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Width" Value="Auto" />
                                <Setter Property="Height" Value="12" />
                                <Setter TargetName="Thumb" Property="Tag" Value="Horizontal" />
                                <Setter TargetName="PageDown" Property="Command" Value="ScrollBar.PageLeftCommand" />
                                <Setter TargetName="PageUp" Property="Command" Value="ScrollBar.PageRightCommand" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ScrollThumbs" TargetType="{x:Type Thumb}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Grid x:Name="Grid">
                            <Rectangle
                                Width="Auto"
                                Height="Auto"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Fill="Transparent" />
                            <Border
                                x:Name="Rectangle1"
                                Width="Auto"
                                Height="Auto"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="Tag" Value="Horizontal">
                                <Setter TargetName="Rectangle1" Property="Width" Value="Auto" />
                                <Setter TargetName="Rectangle1" Property="Height" Value="7" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <ScrollViewer
        Padding="0,0,0,40"
        Background="#fff"
        VerticalScrollBarVisibility="Auto">
        <StackPanel x:Name="Detail">
            <Grid Margin="24,0,24,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Grid.Column="0" Margin="0,30,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="200" />
                        <RowDefinition Height="150" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Margin="0,40,0,0">
                        <DockPanel>
                            <StackPanel DockPanel.Dock="Top">
                                <TextBlock
                                    x:Name="ProductName"
                                    Height="124"
                                    Padding="35,0,35,0"
                                    FontSize="40"
                                    FontWeight="Bold"
                                    Text="{Binding TenSP}"
                                    TextWrapping="Wrap" />
                                <Label
                                    Name="Category"
                                    Height="40"
                                    Padding="35,0,0,0"
                                    VerticalContentAlignment="Center"
                                    Content="{Binding TenDM}"
                                    FontWeight="Bold"
                                    Foreground="#bab7b6" />
                                <StackPanel Grid.Row="2" Orientation="Horizontal">
                                    <Label
                                        Padding="35,0,0,0"
                                        HorizontalAlignment="Left"
                                        VerticalContentAlignment="Center"
                                        Content="Lượt xem: "
                                        FontSize="15" />
                                    <Label
                                        VerticalContentAlignment="Center"
                                        Content="{Binding LuotXem}"
                                        Foreground="#FF6C6C6C" />
                                </StackPanel>
                            </StackPanel>
                        </DockPanel>
                        <Expander
                            Height="Auto"
                            Margin="10,14,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Top"
                            Background="#fff"
                            Header="Một vài thông tin"
                            IsExpanded="False">
                            <StackPanel
                                Margin="24,8,24,16"
                                Orientation="Vertical"
                                TextBlock.Foreground="{DynamicResource MaterialDesignBody}">
                                <TextBlock Text="{Binding TenSP}" />
                                <TextBlock
                                    Opacity=".68"
                                    Text="{Binding MoTa}"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </Expander>
                    </StackPanel>

                    <Grid
                        Grid.Row="1"
                        Grid.RowSpan="2"
                        Margin="35,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="200" />
                        </Grid.RowDefinitions>

                        <Border
                            Grid.Row="0"
                            Grid.Column="0"
                            BorderBrush="#c7c7c7"
                            BorderThickness="0,0,0.5,0">
                            <StackPanel>
                                <TextBlock
                                    FontSize="120"
                                    FontWeight="Light"
                                    Text="{Binding SoThanhPhan}"
                                    TextAlignment="Center" />
                                <TextBlock Text="Thành phần" TextAlignment="Center" />
                            </StackPanel>
                        </Border>

                        <Border
                            Grid.Row="0"
                            Grid.Column="1"
                            BorderBrush="#c7c7c7"
                            BorderThickness="0">
                            <StackPanel>
                                <TextBlock
                                    FontSize="120"
                                    FontWeight="Light"
                                    Text="{Binding ThoiGian}"
                                    TextAlignment="Center" />
                                <TextBlock Text="Phút" TextAlignment="Center" />
                            </StackPanel>
                        </Border>
                    </Grid>
                    <Grid Grid.Row="2" Width="250">
                        <Button
                            Height="50"
                            materialDesign:ButtonAssist.CornerRadius="10"
                            Background="#F75C03"
                            Click="BtnFavorite_Click"
                            Foreground="#fff"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            ToolTip="MaterialDesignRaisedButton with Round Corners">
                            <TextBlock Text="Thêm vào món ăn yêu thích" />
                        </Button>
                    </Grid>
                </Grid>

                <DockPanel Grid.Column="1" Margin="0,40,0,0">
                    <Border
                        Name="Avatar"
                        Width="460"
                        Height="500"
                        Margin="0"
                        CornerRadius="20"
                        DockPanel.Dock="Top">
                        <Border.Background>
                            <ImageBrush
                                ImageSource="{Binding AnhDaiDien, Converter={StaticResource pathConverter}}"
                                RenderOptions.BitmapScalingMode="HighQuality"
                                Stretch="UniformToFill" />
                        </Border.Background>
                    </Border>
                </DockPanel>
            </Grid>
            <DockPanel Margin="24,0" HorizontalAlignment="Center">
                <Button
                    Margin="0,0,-58,0"
                    Panel.ZIndex="10"
                    Background="#6C515151"
                    Click="btnPrev_Click"
                    DockPanel.Dock="Left"
                    Foreground="White"
                    Style="{StaticResource MaterialDesignIconForegroundButton}">
                    <materialDesign:PackIcon Kind="ChevronLeft" />
                </Button>
                <ListView
                    Name="ImageCarousel"
                    Width="550"
                    BorderThickness="0"
                    PreviewMouseWheel="ScrollViewer_PreviewMouseWheel"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Disabled"
                    Style="{StaticResource ListViewStyle}">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="{x:Type ListViewItem}">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border
                                Width="550"
                                Height="300"
                                BorderBrush="#FF666666"
                                BorderThickness="0.5">
                                <Border.Background>
                                    <ImageBrush
                                        ImageSource="{Binding Path=., Converter={StaticResource pathConverter}}"
                                        RenderOptions.BitmapScalingMode="HighQuality"
                                        Stretch="Fill" />
                                </Border.Background>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <Button
                    Margin="-58,0,0,0"
                    Panel.ZIndex="10"
                    Background="#6C515151"
                    Click="btnNext_Click"
                    DockPanel.Dock="Right"
                    Foreground="White"
                    Style="{StaticResource MaterialDesignIconForegroundButton}">
                    <materialDesign:PackIcon Kind="ChevronRight" />
                </Button>
            </DockPanel>
            <!--  INGREDIENTS  -->
            <StackPanel Width="800" Margin="0,20,0,0">
                <Label
                    Content="Nguyên liệu"
                    FontSize="30"
                    FontWeight="ExtraBold" />
                <ListView
                    Name="Ingredients"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Disabled">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Margin="30,12,0,0" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.Template>
                        <ControlTemplate>
                            <ItemsPresenter />
                        </ControlTemplate>
                    </ListView.Template>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="{x:Type ListViewItem}">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Focusable" Value="false" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,10" Orientation="Horizontal">
                                <materialDesign:PackIcon
                                    VerticalAlignment="Center"
                                    Foreground="#F75C03"
                                    Kind="PlusCircleOutline">
                                    <materialDesign:PackIcon.LayoutTransform>
                                        <ScaleTransform CenterX="0.5" CenterY="0.5" ScaleX="1.2" ScaleY="1.2" />
                                    </materialDesign:PackIcon.LayoutTransform>
                                </materialDesign:PackIcon>
                                <TextBlock
                                    Margin="6,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Text="{Binding}"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <!--  STEPS  -->
                <Label
                    Content="Các bước thực hiện"
                    FontSize="30"
                    FontWeight="ExtraBold" />

                <ListView
                    Name="Steps"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                    ScrollViewer.VerticalScrollBarVisibility="Disabled">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Margin="30,12,0,0" />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.Template>
                        <ControlTemplate>
                            <ItemsPresenter />
                        </ControlTemplate>
                    </ListView.Template>
                    <ListView.ItemContainerStyle>
                        <Style TargetType="{x:Type ListViewItem}">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                                        <ContentPresenter />
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,10" Orientation="Vertical">
                                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                    <Label
                                        HorizontalContentAlignment="Left"
                                        Content="Bước"
                                        FontSize="20"
                                        FontWeight="SemiBold" />
                                    <Label
                                        VerticalAlignment="Center"
                                        Content="{Binding step}"
                                        FontSize="20"
                                        FontWeight="SemiBold" />
                                    <Label
                                        VerticalAlignment="Center"
                                        HorizontalContentAlignment="Left"
                                        Content=":"
                                        FontSize="20"
                                        FontWeight="SemiBold" />
                                </StackPanel>
                                <TextBlock
                                    Margin="6,12,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="16"
                                    Text="{Binding Do}"
                                    TextWrapping="Wrap" />
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <StackPanel Margin="0,20,0,0" Orientation="Horizontal">
                    <Label
                        HorizontalAlignment="Center"
                        Content="Video hướng dẫn chi tiết: "
                        FontSize="20"
                        FontWeight="ExtraBold" />
                    <TextBlock
                        Width="auto"
                        VerticalAlignment="Center"
                        FontSize="16">
                        <Hyperlink
                            Name="hl"
                            NavigateUri="{Binding Video}"
                            RequestNavigate="HandleRequestNavigate"
                            TargetName="_top">
                            Click
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
